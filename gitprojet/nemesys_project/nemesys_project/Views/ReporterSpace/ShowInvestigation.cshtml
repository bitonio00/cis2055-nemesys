@model Investigation

@{
    ViewData["Title"] = "ShowInvestigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowInvestigation</h1>

<form class="mt-3">
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Model.Description
        </div>
        <label asp-for="DateOfAction" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Model.DateOfAction
        </div>
        <label asp-for="DateOfCreation" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Model.DateOfCreation
        </div>
        <label asp-for="Investigator.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Model.Investigator.Email
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-action="ManageReports" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>


