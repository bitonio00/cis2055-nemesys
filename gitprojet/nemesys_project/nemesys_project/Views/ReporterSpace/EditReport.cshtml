@model EditReportViewModel
@{
    ViewData["Title"] = "EditReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditReport</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="HazardDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="HazardDate" class="form-control">
            <span asp-validation-for="HazardDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        Select a Hazard
        <select asp-for="HazardType" class="form-control" name="HazardType">
            <option>unsafe act</option>
            <option>condition</option>
            <option>equipment</option>
            <option>structure</option>
        </select>
        <span asp-validation-for="HazardType" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="HazardLocation" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="HazardLocation" class="form-control">
            <span asp-validation-for="HazardLocation" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="CreationDate" />
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="InvestigationRefId" />
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="VoteRefId" />
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="ImageUrl" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ManageReports" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>