@model EditInvestigationViewModel
@{
    ViewData["Title"] = "EditInvestigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EditInvestigation</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>

    <!-- Custom styles for this template -->
    <link href="~/css/register.css" rel="stylesheet" />
</head>

<body class="bg-light">
    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h1 class="fw-light">Edit Investigation</h1>
                <p class="lead text-muted">You can edit an investigation using the form below.</p>
                <br />
                <a class="btn btn-lg btn-outline-warning" href="/InvestigatorSpace/ManageInvestigations"><strong>Cancel</strong></a>
            </div>

            <div class="row g-5">
                <!--Cadre de gauche-->
                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3 fw-light"><strong>Investigation information</strong></h4>
                    <hr class="my-2">

                    <form method="post">
                        <div class="row g-3">

                            <div class="col-12 form-group">
                                <label asp-for="Description" class="col-sm-2 col-form-label"></label>

                                <input asp-for="Description" class="form-control">
                                <span asp-validation-for="Description" class="text-danger"></span>

                            </div>
                            <div class=" col-12 form-group">
                                <label asp-for="DateOfAction" class="col-sm-2 col-form-label"></label>

                                <input asp-for="DateOfAction" class="form-control">
                                <span asp-validation-for="DateOfAction" class="text-danger"></span>

                            </div>
                            <div class="col-12 form-group">
                                Select a Status
                                <select asp-for="StatusId" class="form-control" name="StatusId">
                                    <option value="2">closed</option>
                                    <option value="3">no action required</option>
                                    <option value="4">being investigated</option>
                                </select>
                                <span asp-validation-for="StatusId" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <input type="hidden" asp-for="DateOfCreation" />
                            </div>
                            <div class="form-group row">
                                <input type="hidden" asp-for="ReportRefId" />
                            </div>
                            <div class="form-group row">
                                <input type="hidden" asp-for="InvestigationId" />
                            </div>
                            <div class="form-group row">
                                <input type="hidden" asp-for="InvestigatorRefId" />
                            </div>
                            <div class="form-group row">
                                <input type="hidden" asp-for="Status" />
                            </div>

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="col-sm-6 form-group">
                                <button type="submit" class="btn btn-success col-6"><strong>Update</strong></button>
                            </div>

                            <div class="col-sm-6 form-group">
                                <a asp-action="ManageInvestigations" class="btn btn-warning col-6"><strong>Cancel</strong></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html>