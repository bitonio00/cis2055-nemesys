@model EditInvestigationViewModel
@{
    ViewData["Title"] = "EditInvestigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditInvestigation</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfAction" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateOfAction" class="form-control">
            <span asp-validation-for="DateOfAction" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        Select a Status
        <select asp-for="StatusId" class="form-control" name="StatusId">
            <option value="2">closed</option>
            <option value="3">no action required</option>
            <option value="4">being investigated</option>
        </select>
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="DateOfCreation" />
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="ReportRefId" />
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="InvestigationId" />
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="InvestigatorRefId" />
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="Status" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ManageReports" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>