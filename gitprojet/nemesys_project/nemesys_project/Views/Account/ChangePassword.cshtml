@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ChangePassword</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>

    <!-- Custom styles for this template -->
    <link href="~/css/register.css" rel="stylesheet" />

</head>
<body class="bg-light">
    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h1 class="fw-light">Edit Password</h1>
                <p class="lead text-muted">You can edit your password using the form below.</p>
            </div>

            <div class="row g-5">
                <!--Cadre de gauche-->
                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3 fw-light"><strong>Investigation information</strong></h4>
                    <hr class="my-2">

                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row g-3">

                            <div class="col-12 form-group">
                                <label asp-for="OldPassword"></label>
                                <input asp-for="OldPassword" class="form-control" placeholder="MyOldPassword" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                            <div class="col-12 form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" class="form-control" placeholder="MyNewPassword" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-12 form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="MyNewPasswordConfirmed" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="col-sm-6 form-group">
                                <button type="submit" class="btn btn-success col-6"><strong>Update</strong></button>
                            </div>

                            <div class="col-sm-6 form-group">
                                <a href="/Account/Parameters" class="btn btn-warning col-6"><strong>Cancel</strong></a>
                            </div>
                        </div>
                    </form>
                        
                    </div>
                </div>
</main>
    </div>
</body>
</html>