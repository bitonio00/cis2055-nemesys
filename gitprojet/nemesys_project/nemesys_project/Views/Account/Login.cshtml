@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Signin</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>

    <!-- Custom styles for this template -->
    <link href="~/css/signin.css" rel="stylesheet" />
</head>

<body class="text-center bg-light">

    <main class="form-signin">
        <form method="post">
            <img class="mb-4" src="https://i.ibb.co/ZRrw99X/NEMESYS-2.jpg" alt="NEMESYS-2" width="72" height="72">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                <label asp-for="Email" for="floatingInput" class="control-label">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
                <label asp-for="Password" for="floatingPassword" class="control-label">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group checkbox mb-3">
                <label asp-for=" RemeberMe">
                    <input asp-for="RemeberMe" /> Remember me

                </label>
            </div>

            <button class="w-100 btn btn-lg btn-dark" type="submit" value="Login">Sign in</button>

            <div class="form-floating">
                <a class="page-scroll" href="/Account/ForgotPassword">Forgot Password?</a>
            </div>
            <div class="form-floating" style="margin-top:10px">
                <a class="page-scroll" href="/Account/Register">You don't have an account ? <br/>Register here !</a>
            </div>
        </form>



    </main>

</body>
</html>