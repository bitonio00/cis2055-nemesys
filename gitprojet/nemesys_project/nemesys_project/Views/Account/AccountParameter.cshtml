@model NemesysUser
@{
    ViewData["Title"] = "AccountParameter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AccountParameter</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>

    <!-- Custom styles for this template -->
    <link href="~/css/register.css" rel="stylesheet" />

</head>

<body class="bg-light">
    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h1 class="fw-light">Edit Personal Information</h1>
                <p class="lead text-muted">You can modify your personal information with the form below.</p>
            </div>

            <div class="row g-5">
                <!--Cadre de gauche-->
                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3 fw-light"><strong>Personal information</strong></h4>
                    <hr class="my-2">

                    <form method="post">
                        <div class="row g-3">

                            <div class="col-12 form-group">
                                <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="Tarek">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-12 form-group">
                                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Moulekaf">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-12 form-group">
                                    <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="0647662277">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="LockoutEnabled" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="Email" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="AccessFailedCount" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="LockoutEnabled" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="ConcurrencyStamp" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="EmailConfirmed" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="Reports" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="Investigations" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="EmailConfirmed" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="PasswordHash" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="LockoutEnd" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="NemesysUserVotes" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="UserName" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="NormalizedUserName" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="SecurityStamp" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="TwoFactorEnabled" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="NormalizedEmail" />
                                </div>
                                <div class="form-group row">
                                    <input type="hidden" asp-for="Id" />
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>


                                <div class="col-sm-6 form-group">
                                    <button type="submit" class="btn btn-success col-6"><strong>Update</strong></button>
                                </div>
                                <div class="col-sm-6 form-group">
                                    <a href="/Account/Parameters" class="btn btn-warning col-6"><strong>Cancel</strong></a>
                                </div>
                                
                            
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html>