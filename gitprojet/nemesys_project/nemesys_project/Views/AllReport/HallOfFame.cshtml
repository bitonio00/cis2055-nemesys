@model List<(string, int)>
@{
    ViewData["Title"] = "HallOfFame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>HallOfFame</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>

    <!--StyleSheet-->
    <link href="~/css/component.css" rel="stylesheet" />

</head>

<body style="margin-bottom:20px">

    
    <div class="bd-cheatsheet container-fluid bg-body">
        <section id="content">
            <article class="my-3" id="tables">

                <div class="bd-heading  align-self-start mt-4 mb-3 mt-xl-0 mb-xl-2 text-center">
                    <h1>Hall Of Fame</h1>
                </div>

                <div>

                    <div class="bd-example">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Number of reports</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    int i = 0;
                                    foreach (var reporter in Model)
                                    {
                                        i++;

                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@reporter.Item1</td>
                                            <td>@reporter.Item2</td>
                                        </tr>
                                       
                                    }
                                }

                                else
                                {

                                    <tr>
                                        <th scope="row">not found</th>
                                        <td>not found</td>
                                        <td>not found</td>
                                        <dialog>No Reporter</dialog>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </article>
        </section>
    </div>
</body>
</html>
