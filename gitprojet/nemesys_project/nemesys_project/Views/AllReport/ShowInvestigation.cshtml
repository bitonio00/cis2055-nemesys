@model Investigation

@{
    ViewData["Title"] = "ShowInvestigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ShowInvestigation</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        .centre {
            text-align: center;
        }
    </style>

</head>

<body>
    <main>
        <div class="container py-5">
            <div class="p-5 mb-4 bg-light rounded-3">
                <div class="centre container py-3 text-white bg-dark rounded-3 align-items-center border shadow-lg">
                    <h1><strong>Investigation</strong></h1>
                    <hr class="my-2 mt-4">
                    <form method="post" class="mt-3">
                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-6 col-form-label"><u>Description:</u></label>
                            <div class="col-sm-6">
                                @Model.Description
                            </div>
                            <label asp-for="DateOfAction" class="col-sm-6 col-form-label"><u>Date of action:</u></label>
                            <div class="col-sm-6">
                                @Model.DateOfAction
                            </div>
                            <label asp-for="DateOfCreation" class="col-sm-6 col-form-label"><u>Date of creation:</u></label>
                            <div class="col-sm-6">
                                @Model.DateOfCreation
                            </div>
                            <label asp-for="Investigator.Email" class="col-sm-6 col-form-label"><u>Email:</u></label>
                            <div class="col-sm-6">
                                @Model.Investigator.Email
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="centre form-group row mt-3">

                            <a asp-action="Reports" class="w-100 btn btn-warning btn-lg"><strong>Go back</strong></a>

                        </div>
                    </form>
                </div>
                </div>
            </div>
</main>
</body>
</html>