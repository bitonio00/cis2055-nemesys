@inject SignInManager<NemesysUser> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nemesys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Nemesys", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div class="navbar-collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink(" " + "Home", "Index", "Home")</li>
                        <li>@Html.ActionLink(" " + "Hall Of Fame", "Index", "HallOfFame")</li>
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li>@Html.ActionLink(" " + "LogOut" + User.Identity.Name, "LogOut", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Register", "Register", "Account")</li>
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>

                        }
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("reporter"))
                         {
                            <li>@Html.ActionLink(" " + "My Space", "ManageReports", "ReporterSpace")</li>
                        }
                        else if(signInManager.IsSignedIn(User) && User.IsInRole("investigator"))
                        {
                           <li>@Html.ActionLink(" " + "My Space", "ManageInvestigations", "InvestigatorSpace")</li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <p>&copy; @DateTime.Now.Year - Nemesys</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
